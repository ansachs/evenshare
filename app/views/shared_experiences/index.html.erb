<div class="container">
   
  <div class="row offset-lg-6 col-lg-4">
      
  </div>
  <div class="row">
    <% # => binding.pry %>
    <%= render partial: 'videos/video_carousel', locals: {media: @media} %>
  </div>
  <div class="row">
      <% #binding.pry %>
    <%= render partial: 'videos/video_submit', locals: {concert_id: @concert.id} %>
      <% #binding.pry %>
  </div>
  <div class="row">
    <div class="col-lg-8">
      <div class="panel panel-default" id="chatbox">
        <% if @messages.any? %>
          <div class="panel-body bg-light" id="messages">
            <%= render partial: 'chats/chat', collection: @messages, as: :message %>
          </div>
        <%else%>
          <div class="panel-body hidden" id="messages">
          </div>
        <%end%>
      </div>
      <%= render partial: 'chats/chat_form', locals: {message: @message, concert: @concert}%>
    </div>
    <div class="col-lg-4">
      <div class="card">
        <%= render partial: 'twitter/tweets', locals: {concert: @concert.title} %> 
      </div>
    </div>
  </div>
</div>


<%= javascript_include_tag params[:controller] %>
<%= javascript_include_tag 'cable' %>
<%= javascript_include_tag 'channels/room' %>
<%= action_cable_meta_tag %>
