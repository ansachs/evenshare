<h1>Chat room</h1>

<div class="row col-md-8 col-md-offset-2">
  <h1><%= @concert.title %></h1>

<div class="panel panel-default">
  <% if @messages.any? %>
    <div class="panel-body" id="messages">
      <%= render partial: 'chats/chat', collection: @messages, as: :message %>
    </div>
  <%else%>
    <div class="panel-body hidden" id="messages">
    </div>
  <%end%>
</div>

  <%= render partial: 'chats/chat_form', locals: {message: @message, concert: @concert}%>
</div>
