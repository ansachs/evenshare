
<div class="container">
   
  <div class="row">
    <div class="col-12 mt-1 text-center">
      <div><%= @concert.title %></div>
    </div>
  </div>
  <div class="row">
    <% # => binding.pry %>
    <%= render partial: 'videos/video_carousel', locals: {media: @media} %>
  </div>

  
  
  <div class="row">
    <div class="col-lg-8">
      <div class="panel panel-default" id="chatbox">
        <% if @messages.any? %>
          <div class="panel-body bg-light" id="messages">
            <%= render partial: 'chats/chat', collection: @messages, as: :message %>
          </div>
        <%else%>
          <div class="panel-body hidden" id="messages">
          </div>
        <%end%>
      </div>
      <%= render partial: 'chats/chat_form', locals: {message: @message, concert: @concert}%>
    </div>
    <div class="col-lg-4">
      <div class="card">
        <div class="list-group" id="tweets">
          <% if @tweets.any? %>
            <%= render partial: 'twitter/tweets', collection: @tweets, as: :tweet %> 
          <% else %>
            <div class='list-group-item' id="no-tweets"> no tweets available </div>  
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class='row'>
    <%= button_to'return to concert list', concerts_path, method: :get %>
  </div>
</div>


<%= action_cable_meta_tag %>

<%= javascript_include_tag 'room_related' %>


