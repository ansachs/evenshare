<div class='page-header'>
  <h1>postings by gigshare user: <%= @user.name %></h1>
</div>
<div class="container">
  <div class="row col-lg-10">
    <table class='table table-striped table-hover'>
      <thead>
        <tr>
          <th>concert</th>
          <th>date posted</th>
          <th>media</th>
        </tr>
      </thead>

      <tbody>
        <% @user_media.each do |media| %>
          <tr>
            <td><%= link_to Concert.where(id: media.concert_id)[0].title, concert_shared_experiences_path(concert_id: media.concert_id) %></td>
            <td><%= media.created_at.strftime('%m/%d/%Y') %></td>
            <td><iframe src=<%= media.link %> frameborder="0" allowfullscreen></iframe></td>
            <td><%= link_to 'Delete', user_media_link_path(id: media.id, user: media.user_id), method: :delete, data: { confirm: 'Are you sure?' } %>
            </td>
          </tr>
        <% end %>
      </tbody>

    </table>
    <%= link_to 'return to concert', concert_shared_experiences_path(concert_id: @referring_concert), class: 'btn btn-primary' %>
  </div>
</div>  
<br>
