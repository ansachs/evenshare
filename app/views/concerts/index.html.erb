  <div class="container py-3 mt-3" style="background-color: lightgray">
    <div class="row">
      <div class='col-md-4 offset-md-2'>
        <h5>Connect around music</h5>
      </div>
    </div>
    <div class="row">
      <div class="col-md-4 offset-md-4">
        <h1 class="display-3">Gigshare</h1>
      </div>
    </div>
    <form action='/concerts' class="form float-right" >
      <input name="authenticity_token" value="<%= form_authenticity_token %>" 
      _method="get" type="hidden">
      <input type="date" name="date" placeholder="http://.../embed/...">
      <button type="submit" id="media_submit" >submit</button>
    </form>

    
  </div>

