<%= form_for :message, url: "/concerts/#{@concert.id}/shared_experiences", remote: true, authenticity_token: true, html: {id: "submit-text"} do |f| %>
  <%= f.label :say_something %>:
  <%= f.text_field :statement, class: "form-control", data: {textarea: "message"} %>
  <%= f.hidden_field :chat_box_id, value: @chat_box.id %>
  <%= f.submit "send", style: 'display:none', class: "target_this", data: {send: "message"} %>
<% end %>
<br>